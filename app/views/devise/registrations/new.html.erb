<h2><%= t('.become') %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= t('.first_name') %><br />
    <%= f.text_field :first_name %>
  </div>

  <div class="field">
    <%= t('.last_name') %><br />
    <%= f.text_field :last_name %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: 'password password-input' %>
  </div>

  <div class="field">
    <%= t('.password_confirmation') %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'confirm-password password-input' %>
    <%= octicon 'check', class: 'text-success hide valid' %>
    <%= octicon 'alert', class: 'text-danger hide invalid' %>
  </div>

  <div class="field">
    <%= f.label :type %> (User or Admin) <br />
    <%= f.text_field :type %>
  </div>

  <div class="actions">
    <%= f.submit t('.submit') %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
