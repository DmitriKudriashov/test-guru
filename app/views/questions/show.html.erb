<h2><%= @question.test.title %></h2>
<p>
  <%= @question.body %>
</p>

<table>
  <thead>
    <tr>
      <th colspan="5" class = "celltab30">id </th>
      <th colspan="5" class = "celltab100"> Answers </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @question.answers.each do |answer| %>
      <tr>
        <td colspan="5" class = "celltab30"><%= answer.id %></td>
        <td colspan="5" class = "celltab100left"><%= answer.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_question_path(@question) %> |
<%= link_to 'Back', question_path %>
