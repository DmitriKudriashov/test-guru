<% if test.questions.present? %>

  <table>
    <tr>
      <th class = "celltab100center"><%= t('.question') %> </th>
      <th class = "celltab30center"><%= t('.answers') %></th>
       <th colspan="3"><%= t('actions') %></th>
    </tr>

    <%= render test.questions %>

