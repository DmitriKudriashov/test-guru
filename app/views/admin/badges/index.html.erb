<h1>Badges management</h1>

<%= button_to 'New Badge', new_admin_badge_path, class: "btn btn-success mb-3", method: :get %>

<%= render 'shared/errors', resource: @badge %>

<table class="table table-bordered">
  <thead class="thead-light" align="center">
    <th> Name </th>
    <th> File </th>
    <th> Rule </th>
    <th colspan="3"><%= t('actions') %></th>
  </thead>

  <tbody>
    <%= render @badges %>
  </tbody>
</table>
