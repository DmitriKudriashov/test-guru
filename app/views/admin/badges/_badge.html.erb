<tr>
  <td class="text-left"><%= badge.name %></td>
  <td class="text-center"><%= image_tag(badge_image(badge), size: "170x110") %></td>
<!-- <td class="text-left"><%= badge.file_image %></td> -->
  <td class="text-left"><%= Badge::RULES[badge.rule.to_sym] %></td>
  <td class="text-center">
    <%= link_to t('show'), admin_badge_path(badge) %>
  </td>
  <td class="text-center">
    <%= link_to t('edit'), edit_admin_badge_path(badge) %>
  </td>
  <td class="text-center">
    <%= link_to t('delete'), admin_badge_path(badge),
                  method: :delete,
                  data: { confirm: t('are_you_sure') } %>
  </td>
</tr>
