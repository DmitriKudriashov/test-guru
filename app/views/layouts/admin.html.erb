<!DOCTYPE html>
<html>
  <head>
    <title>Admin Panel</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>

    <div class="body">
      <%= render 'admin/nav'%>
      <div class="container">
        <%= flash_messages %>
        <%= yield %>
      </div>
      <%= render 'shared/footer' %>
    </div>

  </body>
</html>
