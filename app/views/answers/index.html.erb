<p id="notice"><%= notice %></p>

<h1>Answers</h1>

<table>
  <thead>
    <tr>
      <th class = "celltab100">Answer</th>
      <th class = "celltab30">Correct</th>
      <th class = "celltab100">Question</th>
      <th class = "celltab100">Test</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @answers.each do |answer| %>
      <tr>
        <td class = "celltab100left"> <%= answer.body %> </td>
        <td class = "celltab30"><%=  answer.correct %> </td>
        <td class = "celltab100left"><%=  answer.question.body %> </td>
        <td class = "celltab100left"><%=  answer.question.test.title %> </td>
        <td><%= link_to 'Show', answer %></td>
        <td><%= link_to 'Edit', edit_answer_path(answer) %></td>
        <td><%= link_to 'Destroy', answer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Answer', new_answer_path %>
